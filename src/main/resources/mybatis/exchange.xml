     <update id="updateDoctorLoginId"  parameterType="java.util.Map">
    	update doctor set login_user_id = #{loginId} where doctor.user_id=#{doctorId}
    </update>
	
    <select id="getDoctors" resultMap="UserResultMap" parameterType="java.util.Map">
    	select B.*,D.id as patient_id,D.hospital_id as patient_hospital_id, D.patient_number, D.real_name, D.phone_number, D.gender, D .birthday, D.identity_card, D.address, C.visit_id,C.admission_date_time from 
    	(SELECT A.* FROM medical.department A left outer join department B on A.parent_department_id = B.department_code
			where A.department_code = #{departmentId}
			union 
		SELECT B.* FROM medical.department A left outer join department B on B.parent_department_id = A.department_code where A.department_code = #{departmentId}
			)
		 A inner join doctor B on (A.department_code = B.department_id) 
		  inner join patient_in_hospital C on (B.user_id = C.doctor_id
		  ) 
		 left outer join patient D on (C.patient_id = D.patient_number)
		 
		 <if test="isAll == false">
		 	<![CDATA[inner join operation E on C.patient_id = E.patient_id and E.operating_date < CURDATE() 
		 	and E.operating_date > date_sub(curdate(),interval 1 day)]]> 
		 </if>
		 
    </select>
    
    <select id="getPatients" resultMap="UserResultMap" parameterType="java.util.Map">
    	select B.*,D.id as patient_id,D.hospital_id as patient_hospital_id, D.patient_number, D.real_name, D.phone_number, D.gender, D .birthday, D.identity_card, D.address from 
    	(SELECT A.* FROM medical.department A left outer join department B on A.parent_department_id = B.department_code
			where A.department_code = #{departmentId}
		union 
		SELECT B.* FROM medical.department A left outer join department B on B.parent_department_id = A.department_code where A.department_code = #{departmentId})
		 A inner join doctor B on (A.department_code = B.department_id) 
		 left outer join patient_in_hospital C on (B.user_id = C.doctor_id) 
		 left outer join patient D on (C.patient_id = D.patient_number)
    </select>
    
    <select id="getMedicalRecordByPatientIds" resultMap="MedicalRecordType" parameterType="java.util.Map">
    	select A.id as record_id, A.*,H.name as doctor_name, D.id as operation_id ,D.*,G.name as operator_name, E.asset_id, F.name as assetTypeName from resident_record A inner join 
		( select patient_id, max(ADMISSION_DATE) as visit_date from  resident_record  where patient_id in  ( 
		<foreach item="item" index="index" collection="list" separator=",">
            "${item}"
         </foreach>
		)  group by patient_id ) B on (A.patient_id = B.patient_id and A.ADMISSION_DATE = B.visit_date) left outer join doctor H on (A.doctor_id = H.user_id)
		 left outer join operation D on (B.patient_id = D.patient_id  <![CDATA[  and D.OPERATING_DATE > A.ADMISSION_DATE   ]]>  ) left outer join doctor G on (D.doctor_id = G.user_id) left outer join hospital_record_asset E on (D.id = E.hospital_record_id and E.record_type='operation' and E.status='active') left outer join record_asset_type F on (E.record_asset_type_id = F.id)
    </select>
   
   
    <select id="getExchangeOperationRecords" resultMap="PatientInHospitalType" parameterType="java.util.Map">
    	select A.id as record_id, C.real_name, B.operating_date as operating_date_time, C.birthday, A.*,H.name as doctor_name, B.id as operation_id ,B.*,G.name as operator_name, E.asset_id, F.name as assetTypeName FROM medical.patient_in_hospital A left outer join doctor H on (A.doctor_id = H.user_id) left outer join patient C on (A.patient_id = C.patient_number), 
    	operation B 
    	left outer join doctor G on (B.doctor_id = G.user_id) left outer join hospital_record_asset E on (B.id = E.hospital_record_id and E.record_type='operation' and E.status='active') left outer join record_asset_type F on (E.record_asset_type_id = F.id)
			where A.patient_id = B.patient_id  and B.id in (
			<foreach item="item" index="index" collection="list" separator=",">
            "${item}"
         	</foreach>
			)
    </select>
    
    <select id="getExchangePatientInHospitalRecords" resultMap="PatientInHospitalType" parameterType="java.util.Map">
    	select A.id as record_id, C.real_name, B.operating_date as operating_date_time, C.birthday, I.asset_id as patient_asset_id, J.name as patient_assetTypeName, A.*,H.name as doctor_name, B.id as operation_id ,B.*,G.name as operator_name, E.asset_id, F.name as assetTypeName FROM medical.patient_in_hospital A left outer join doctor H on (A.doctor_id = H.user_id) left outer join patient C on (A.patient_id = C.patient_number) left outer join hospital_record_asset I on (A.id = I.hospital_record_id and I.record_type='patientInhospital' and I.status='active') left outer join record_asset_type J on (I.record_asset_type_id = J.id), 
    	operation B 
    	left outer join doctor G on (B.doctor_id = G.user_id) left outer join hospital_record_asset E on (B.id = E.hospital_record_id and E.record_type='operation' and E.status='active') left outer join record_asset_type F on (E.record_asset_type_id = F.id)
			where A.patient_id = B.patient_id  and A.id in (
			<foreach item="item" index="index" collection="list" separator=",">
            "${item}"
         	</foreach>
			)
    </select>
    
    <select id="getExchangeResidentRecords" resultMap="MedicalRecordType" parameterType="java.util.Map">
    	SELECT A.*,B.name as doctor_name,I.asset_id as resident_asset_id, J.name as residentAssetTypeName FROM medical.resident_record A left outer join doctor B on (A.doctor_id = B.user_id) left outer join hospital_record_asset I on (A.id = I.hospital_record_id and I.record_type='resident' and I.status='active') left outer join record_asset_type J on (I.record_asset_type_id = J.id)
			where A.id in (
			<foreach item="item" index="index" collection="list" separator=",">
            "${item}"
         	</foreach>
			)
    </select>
